<h1>Editing magazine</h1>
 

<% form_for([:admin, @magazine]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date, :discard_hour => true, :discard_day => true %>
  </p>
  <p>
      <% if @magazine.cover == nil %>
          <p>Brak zdjÄ™cia</p>
        <% else %>
      <%= image_tag @magazine.cover.photo.url(:small) %>
        <% end %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

