<h1>Dodaj nowe miejsce</h1>

<% form_for(@place, :url => admin_places_path, :html => {:multipart => true}) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :adres %><br />
    <%= f.text_area :adres %>
  </p>
  <p>
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :web %><br />
    <%= f.text_field :web %>
  </p>
  <p>
    <%= f.label :more %><br />
    <%= f.text_area :more %>
  </p>
  <p>
    <%= f.submit 'Dodaj miejsce' %>
  </p>
<% end %>

<%= link_to t('nav.Back'), admin_places_path %>
