<h1>Pokaż okładkę</h1>

<table>
  <tr style="background-color:white;">
    <th>Magazine</th>
  </tr>

<% @covers.each do |cover| %>
  <tr>
    <td><%=h cover.magazine_id %></td>
    <td><%= link_to t('nav.Show'), cover %></td>
    <td><%= link_to t('nav.Edit'), edit_cover_path(cover) %></td>
    <td><%= link_to t('nav.Destroy'), cover, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nowa okładka', new_admin_cover_path %>